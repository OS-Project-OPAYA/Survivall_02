<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#FFD400">

    <TextView
        android:id="@+id/Logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="SURVIV-ALL"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="50dp"
        android:textStyle="bold"
        android:layout_marginBottom="80dp"
        android:layout_marginTop="20dp"/>

    <LinearLayout
        android:id="@+id/natural_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">


    <TextView
            android:id="@+id/natural_title_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="자연재해"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:orientation="horizontal"
            android:gravity="center"/>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="3"
            android:rowCount="3">

            <Button
                android:id="@+id/button_earthquake"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="지진" />

            <Button
                android:id="@+id/button_typhoon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="태풍" />

            <Button
                android:id="@+id/button_flood"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="홍수" />

            <Button
                android:id="@+id/button_hot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="폭염" />

            <Button
                android:id="@+id/button_gale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="강풍" />

            <Button
                android:id="@+id/button_cold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="강추위" />

            <Button
                android:id="@+id/button_dust"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="황사" />

            <Button
                android:id="@+id/button_landslide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="산사태" />

            <Button
                android:id="@+id/button_volcano"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="화산폭발" />

        </GridLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/social_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">


    <TextView
            android:id="@+id/social_title_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="사회재난"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:padding="16dp"
            android:orientation="horizontal"
            android:gravity="center"/>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="3"
            android:rowCount="2"
            android:orientation="horizontal"
            android:gravity="center">


            <Button
                android:id="@+id/button_fire"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="화재" />

            <Button
                android:id="@+id/button_collapse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="붕괴" />

            <Button
                android:id="@+id/button_trafficaccident"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="교통사고" />

            <Button
                android:id="@+id/button_explosion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="폭발" />

            <Button
                android:id="@+id/button_train"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="기차사고" />

            <Button
                android:id="@+id/button_concert"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="공연장사고" />

        </GridLayout>

    </LinearLayout>


    <TextView
        android:id="@+id/result_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:textColor="@android:color/black"
        android:padding="16dp" />

</LinearLayout>
